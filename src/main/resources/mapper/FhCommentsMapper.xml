<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="FhComments">
    <resultMap id="FhCommentsMap" type="FhComments">
        <id column="id" property="id"/>
        <result column="article_id" property="articleId"/>
        <result column="user_type" property="userType"/>
        <result column="user_id" property="userId"/>
        <result column="pid" property="pid"/>
        <result column="block_id" property="blockId"/>
        <result column="content" property="content"/>
        <result property="createdAt" column="created_at"/>
    </resultMap>

    <sql id="table">
        `fh_comments`
    </sql>

    <sql id="values">
        #{articleId},
        #{userId},
        #{blockId},
        #{pid},
        #{content},
        #{userType},
        NOW()
    </sql>

    <sql id="columns">
        `article_id`,
        `user_id`,
        `block_id`,
        `pid`,
        `content`,
        `user_type`,
        `created_at`
    </sql>

    <sql id="criteria">
        <where>
            <if test="status==null">and status != -2</if>
        </where>

    </sql>

    <select id="findById" parameterType="long" resultMap="FhCommentsMap">
        select id,
        <include refid="columns"/>
        from
        <include refid="table"/>
        where id = #{id}
    </select>


    <insert id="create" parameterType="FhComments" keyProperty="id" useGeneratedKeys="true">
        insert into
        <include refid="table"/>
        (<include refid="columns"/>)
        values (<include refid="values"/>)
    </insert>

    <delete id="delete" parameterType="long">
        delete from
        <include refid="table"/>
        where id = #{id}
    </delete>

    <select id="count" parameterType="map" resultType="long">
        SELECT COUNT(1)
        FROM
        <include refid="table"/>
        <include refid="criteria"/>
    </select>

    <!--分页-->
    <select id="paging" parameterType="map" resultMap="FhCommentsMap">
        SELECT id,
        <include refid="columns"/>
        FROM
        <include refid="table"/>
        <include refid="criteria"/>
        ORDER BY id DESC limit #{offset},#{limit}
    </select>

    <update id="update" parameterType="map">
        UPDATE
        <include refid="table"/>
        <set>
            <if test="articleId != null">`article_id`=#{articleId},</if>
            <if test="userType != null">`user_type`=#{userType},</if>
            <if test="userId != null">`user_id`=#{userId},</if>
            <if test="pid != null">`pid`=#{pid},</if>
            <if test="blockId != null">`block_id`=#{blockId},</if>
            <if test="content != null">`content`=#{content},</if>
            `updated_at` = NOW()
        </set>
        where id = #{id}
    </update>

</mapper>